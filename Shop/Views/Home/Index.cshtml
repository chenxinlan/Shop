@using Shop.Controllers;
@model SiteConfig
@{
    Layout = null;
    ViewData["Title"] = Model.Name;
}

<!DOCTYPE html>

<html ng-app="myApp" ng-controller="myAppCtrl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>商品库存平台-主页</title>

    <!--样式引用-->
       <!--bootstrap-->
    <link href="~/lib/bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet" />
       <!--ui-grid-->
    <link href="~/lib/angular.js/ui-grid-3.0.7/ui-grid.css" rel="stylesheet" />

    <!--js包引用-->
       <!--lodash-->
    <script src="~/lib/lodash/lodash.js"></script>
       <!--jquery-->
    <script src="~/lib/jquery/jquery-2.1.4.js"></script>
       <!--bootstrap-->
    <script src="~/lib/bootstrap/3.3.5/js/bootstrap.js"></script>
       <!--angular-->
    <script src="~/lib/angular.js/1.4.8/angular.js"></script>
       <!--ui-grid-->
    <script src="~/lib/angular.js/ui-grid-3.0.7/ui-grid.js"></script>
       <!--ui-router-->
    <script src="~/lib/angular.js/ui-router-0.2.15/angular-ui-router.js"></script>
       <!--ui-router-extras-->
    <script src="~/lib/angular.js/ct-ui-router-extras.js"></script>
       <!--angular-cookies-->
    <script src="~/lib/angular.js/1.4.8/angular-cookies.js"></script>

    @* 业务页面. *@
       <!--app 启动页面js-->
    <script src="~/Frontend/Controllers/app.js"></script>
    <script src="~/Frontend/common/animations.js"></script>
    <script src="~/Frontend/common/controllers.js"></script>
    <script src="~/Frontend/common/directives.js"></script>
    <script src="~/Frontend/common/filters.js"></script>
    <script src="~/Frontend/common/services.js"></script>
    <script src="~/Frontend/Controllers/stock.js"></script>
    <script src="~/Frontend/Controllers/commodityType.js"></script>
</head>
<body>
    
    <div class="page-header">
        <h1>
            @Model.Name
            <small>@Model.Info</small>
        </h1>
    </div>
     
    <div ui-view="">
       
    </div>

    <script type="text/ng-template" id="home.html">
        <ul class="nav nav-tabs">
            <li ng-class="getClass('app.stock.Select')"><a ui-sref="app.stock">库存表</a></li>
            <li ng-class="getClass('app.commodityType.Select')"><a ui-sref="app.commodityType">分类表</a></li>
            <li><a href="#">...</a></li>
            <li><a href="#">...</a></li>
            <li><a href="#">...</a></li>
            <li><a href="#">...</a></li>
        </ul>

        @* 做菜单循环 *@
        <hr/>
        <div ui-view="stock" ng-show="$state.includes('app.stock')"></div>
        <div ui-view="commodityType" ng-show="$state.includes('app.commodityType')"></div>
    </script>
</body>
</html>
